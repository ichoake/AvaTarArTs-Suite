{
  "patterns": {
    "global_exclusions": [
      "^\\.*",
      ".*\\/venv\\/.*",
      ".*\\/\\.venv\\/.*",
      "... all other patterns ..."
    ],
    "file_types": {
      "audio": [".mp3", ".wav", ".flac", ".aac", ".m4a"],
      "video": [".mp4", ".mkv", ".mov", ".avi", ".webm"],
      "image": [".jpg", ".jpeg", ".png", ".bmp", ".gif", ".tiff"],
      "documents": [".pdf", ".docx", ".xlsx", ".pptx", ".txt"],
      "other": [".zip", ".tar.gz", ".7z", ".log", ".tmp"]
    }
  }
}
